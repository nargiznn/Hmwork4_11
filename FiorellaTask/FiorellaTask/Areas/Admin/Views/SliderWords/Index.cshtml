@model List<SliderWords>

<div class="container mt-5">
    <h1 class="text-center">Slider Words</h1>
    <div class="create-area">
        <a asp-action="Create" class="btn btn-success">Create</a>
    </div>
    <div class="table-responsive pt-3 mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Options</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody class="text-center">
                    <tr>
                        <td>
                            <img src="~/assets/img/@item.Image" style="width:150px;height:100px" alt="image">
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Desc</td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-primary">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                            <button type="button" data-id="@item.Id" class="btn btn-outline-danger delete-category">Delete</button>
                        </td>
                    </tr>
                </tbody>

            }
        </table>
    </div>
</div>
