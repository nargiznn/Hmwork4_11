@model SliderWords

<div class="container mt-5">
    <h3 class="text-center">Edit slider </h3>
    <div class="mt-3">
        <img src="~/assets/img/@Model.Image" style="width:300px;height:150px;" />
    </div>
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="mt-3" enctype="multipart/form-data">
        <input asp-for="SliderPhoto" class="form-control mt-5">

        <input type="text" asp-for="Title" class="form-control mt-5" id="categoryInput" >
        <span class="text-danger d-block" asp-validation-for="Title"></span>

        <input type="text" asp-for="Desc" class="form-control mt-5" id="categoryInput">
        <span class="text-danger d-block" asp-validation-for="Desc"></span>

        <button type="submit" class="btn btn-success mr-2 mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary mx-2 mt-3">Cancel</a>
    </form>

</div>